<!DOCTYPE html>
<html lang="en">
  <head>
    <style>
      html,body { height: 100%; margin: 0 !important; padding: 0 !important; }
      body {
	overflow-x: hidden;
	display: flex;

	font-family: sans-serif;
	font-size: 12px;
      }

      .main-container {
	margin: 0;
	flex-grow: 1;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	padding: 16px;
      }

      .header-container {
        align-self: flex-end;
	/* flex: 1; */
      }

      .footer-container {
	align-self: flex-end;
	/* flex: 1; */
	display: flex;
	/* flex-direction: column; */
	justify-content: flex-end;
      }

      .body-container {
	align-self: center;
	width: 70%;
	min-width: 160px;
	max-width: 800px;
	flex-grow: 1;
	flex: 1;
      }

      .message-content {
	  margin-top: 10px;
	  margin-bottom: 10px;
      }

      .hidden {
	  display: none;
      }

      .msg-row {
	  display: flex;
	  flex-direction: row;
	  justify-content: space-between
      }
      .msg-row.hidden {
	  display: flex;
	  flex-direction: row;
	  display: none;
      }

      .label {
	  font-size: 1.5rem;
	  font-weight: bold;
      }

      #editmessage {
	  align-self: right;
	  justify-content: right;
      }

      input[type=text] {
	  border: 0;
	  outline: 0;
	  font-size: 1.3em; 
	  width: 400px;
	  border-bottom: 2px solid gray;
      }
    </style>
    <title>one each</title>
  </head>
  <body class="container">
    <div class="main-container">
      <div class="header-container">
	<div class="logo-container">
	  <img src="/static/logo.svg" alt="logo" height="36px" width="36px"/>
	  </div>
	<div class="about-button">
	  <a href="/about">??</a>
	</div>
      </div>
      <div class="body-container" style="font-size: 18;" >
	<%~ it.body %>
      </div>
      <% if (it.clientIp) { %>
	<div class="footer-container">
	    <%~ it.clientIp %>
	</div>
      <% } %>
    </div>

    <script>
      window.onload = function () {
	console.log("LOADED");
	document.querySelector('#dayEditIcon').addEventListener('click', function (e) {
	  console.log('here')
	  document.querySelector('#dayEdit').classList.remove('hidden');
	});
	document.querySelector('#weekEditIcon').addEventListener('click', (e) => {
	  document.querySelector('#weekEdit').classList.remove('hidden');
	});
	document.querySelector('#monthEditIcon').addEventListener('click', (e) => {
	  document.querySelector('#monthEdit').classList.remove('hidden');
	});
	document.querySelector('#yearEditIcon').addEventListener('click', (e) => {
	  document.querySelector('#yearEdit').classList.remove('hidden');
	});
      }
      
    </script>
  </body>
</html>
